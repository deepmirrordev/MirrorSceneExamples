{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@deepmirror/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
